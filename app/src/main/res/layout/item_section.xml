<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:cardCornerRadius="14dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        android:outlineSpotShadowColor="@android:color/transparent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                android:outlineSpotShadowColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/image_onboarding_first"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/background_photo_rating"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_star"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mabrypro_bold"
                            android:layout_gravity="center"
                            android:includeFontPadding="false"
                            android:text="5.0"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mabrypro_bold"
                android:gravity="start"
                android:includeFontPadding="false"
                tools:text="Карате Кеукешенкай. Путь к солнцу. Через тернии к звёздам!"
                android:textColor="@color/color_title_card"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="11dp"
                    android:gravity="center"
                    android:src="@drawable/icon_age_section"/>

                <TextView
                    android:id="@+id/age_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mabrypro_medium"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:text="6-12 лет"
                    android:textColor="@color/color_title_card"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="11dp"
                    android:gravity="center"
                    android:src="@drawable/icon_time_section"/>

                <TextView
                    android:id="@+id/time_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mabrypro_medium"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:text="пн, вт 18:00 - 19:00"
                    android:textColor="@color/color_title_card"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="11dp"
                    android:gravity="center"
                    android:src="@drawable/icon_place_section"/>

                <TextView
                    android:id="@+id/place_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mabrypro_medium"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:text="м. Уралмаш, стадион УРАЛ"
                    android:textColor="@color/color_title_card"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/button_more_detailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_color"
                android:fontFamily="@font/mabrypro_medium"
                android:paddingVertical="12dp"
                android:text="@string/text_more_detailed"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:cornerRadius="15dp"
                android:lineSpacingExtra="4sp"
                android:enabled="false"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>