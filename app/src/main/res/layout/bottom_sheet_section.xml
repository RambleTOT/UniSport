<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="32dp"
                    android:elevation="0dp"
                    android:outlineSpotShadowColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_onboarding_fourth" />

                    <!--        <ImageButton-->
                    <!--            android:id="@+id/button_close_ground"-->
                    <!--            android:layout_width="44dp"-->
                    <!--            android:layout_height="44dp"-->
                    <!--            android:layout_gravity="end"-->
                    <!--            android:layout_marginEnd="20dp"-->
                    <!--            android:layout_marginTop="21dp"-->
                    <!--            android:background="@drawable/icon_close_sheet_menu"/>-->

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_section_sheet"
                android:orientation="vertical"
                android:layout_marginTop="-50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="24dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_ground_sheet_tilte"
                                android:fontFamily="@font/mabrypro_medium"
                                android:text="@string/text_section_one"
                                android:textSize="16sp"
                                android:includeFontPadding="true"
                                />

                            <TextView
                                android:id="@+id/name_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_ground_sheet_name"
                                android:fontFamily="@font/mabrypro_bold"
                                tools:text="Футболика"
                                android:textSize="24sp"
                                android:layout_marginTop="4dp"
                                />

                            <TextView
                                android:id="@+id/place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_phone_profile"
                                android:fontFamily="@font/mabrypro_medium"
                                tools:text="Пионерский • Красноармейская 27 "
                                android:textSize="14sp"
                                android:includeFontPadding="false"
                                android:layout_marginTop="10dp"
                                />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_line_profile"
                                android:layout_marginTop="12dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/icon_current_section_age"/>

                                <TextView
                                    android:id="@+id/age_section"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_text_section_sheet"
                                    android:fontFamily="@font/mabrypro_medium"
                                    tools:text="6-12 лет"
                                    android:textSize="14sp"
                                    android:includeFontPadding="false"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="8dp"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/icon_current_section_time"/>

                                <TextView
                                    android:id="@+id/time_section"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_text_section_sheet"
                                    android:fontFamily="@font/mabrypro_medium"
                                    tools:text="с 18:00 до 20:00 - Вт, Чт, Сб"
                                    android:textSize="14sp"
                                    android:includeFontPadding="false"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="8dp"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/icon_current_section_rating"/>

                                <TextView
                                    android:id="@+id/rating_section"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_text_section_sheet"
                                    android:fontFamily="@font/mabrypro_medium"
                                    tools:text="4,5 / 5 • 21 оценка"
                                    android:textSize="14sp"
                                    android:includeFontPadding="false"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="8dp"
                                    />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_line_profile"
                                android:layout_marginTop="12dp"/>

                            <TextView
                                android:id="@+id/description_section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_text_section_sheet"
                                android:fontFamily="@font/mabrypro_regular"
                                tools:text="Наша учебная программа разработана ведущими научными сотрудниками НГУ им. П.Ф. Лесгафта в соответствии со стандартами образования детей"
                                android:textSize="14sp"
                                android:includeFontPadding="false"
                                android:layout_marginTop="12dp"
                                />

                            <!--                    <TextView-->
                            <!--                        android:layout_width="wrap_content"-->
                            <!--                        android:layout_height="wrap_content"-->
                            <!--                        android:textColor="@color/color_ground_sheet_name"-->
                            <!--                        android:fontFamily="@font/mabrypro_bold"-->
                            <!--                        tools:text="@string/text_teachers"-->
                            <!--                        android:textSize="20sp"-->
                            <!--                        android:layout_marginTop="12dp"-->
                            <!--                        />-->

                            <Button
                                android:id="@+id/button_enroll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/main_color"
                                android:fontFamily="@font/mabrypro_medium"
                                android:paddingVertical="12dp"
                                android:text="@string/text_to_enroll"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:cornerRadius="15dp"
                                android:lineSpacingExtra="4sp"
                                android:enabled="false"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>